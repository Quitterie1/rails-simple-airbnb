
<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
        <div class="flat-card-content">
          <p><%= flat.name  %></p>
          <p><%= flat.address  %></p>
          <p><%= flat.price_per_night  %></p>
          <p><%= flat.number_of_guests  %></p>
        </div>
        <div class="flat-card-actions">
          <a href="/flats/1158">More info</a>
          <a href="#" class="ml-3 text-warning">Edit</a>
          <a href="#" class="ml-3 text-danger">Remove</a>
        </div>
      </div>
    <% end %>
  </div>
</div>




